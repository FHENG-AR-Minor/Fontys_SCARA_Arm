<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="test_setup1">
	<xacro:property name="M_PI" value="3.1415926535897931" />
	<link name="base_link"/>
	
	<link name="end_effector_1"/>
	
	<link name="end_effector_2">
		<visual>
			<geometry>
				<box size="0.030 0.030 0.250"/>
			</geometry>
			<origin xyz="-0.125 0 0" rpy="0 ${M_PI/2.0} 0"/>
			<material name="steel">
				<color rgba="0.3 0.3 0.9 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.035 0.035 0.255"/>
			</geometry>
			<origin xyz="-0.125 0 0" rpy="0 ${M_PI/2.0} 0"/>
		</collision>
	</link>
	
	<link name="end_effector_3">
		<visual>
			<geometry>
				<box size="0.030 0.030 0.250"/>
			</geometry>
			<origin xyz="-0.125 0 0" rpy="0 ${M_PI/2.0} 0"/>
			<material name="steel">
				<color rgba="0.3 0.3 0.9 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.035 0.035 0.255"/>
			</geometry>
			<origin xyz="-0.125 0 0" rpy="0 ${M_PI/2.0} 0"/>
		</collision>
	</link>
	
	<link name="dummy"/>
	
	<link name="end_point"/>
	
	<joint name="base_link_joint" type="fixed">
		<parent link="base_link"/>
		<child link="dummy"/>
		<origin xyz="0 0 0.400" rpy="0 0 0" />
	</joint>
	
	<xacro:include filename="scara.urdf.xacro" />
	
	<create />
	
	<scara_arm  parent="dummy"/>
	
	<joint name="effector_joint_1" type="revolute">
		<parent link="tool0"/>
		<child link="end_effector_1"/>
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="1 0 0" />
		<limit effort="1000.0" lower="0" upper="${M_PI*2.0}" velocity="0.5"/>
	</joint>
	
	<joint name="effector_joint_2" type="revolute">
		<parent link="end_effector_1"/>
		<child link="end_effector_2"/>
		<origin xyz="0 0 0" rpy="0 ${M_PI} 0" />
		<axis xyz="0 1 0" />
		<limit effort="1000.0" lower="-${M_PI*(3.0/4.0)}" upper="${M_PI*(3.0/4.0)}" velocity="0.5"/>
	</joint>
	
	<joint name="effector_joint_3" type="revolute">
		<parent link="end_effector_2"/>
		<child link="end_effector_3"/>
		<origin xyz="-0.250 0 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
		<limit effort="1000.0" lower="-${M_PI*(3.0/4.0)}" upper="${M_PI*(3.0/4.0)}" velocity="0.5"/>
	</joint>
	
	<joint name="end_joint" type="fixed">
		<parent link="end_effector_3"/>
		<child link="end_point"/>
		<origin xyz="-0.250 0 0" rpy="0 ${M_PI} 0" />
	</joint>
</robot>
