<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="test_setup1">
	<xacro:property name="M_PI" value="3.1415926535897931" />
	<link name="base_link"/>
	
	<link name="end_effector">
		<visual>
			<geometry>
				<box size="0.050 0.050 0.300"/>
			</geometry>
			<origin xyz="0.025 0 0.150" rpy="0 0 0"/>
			<material name="steel">
				<color rgba="0.3 0.3 0.9 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
				<box size="0.055 0.055 0.305"/>
			</geometry>
			<origin xyz="0.025 0 0.150" rpy="0 0 0"/>
		</collision>
	</link>
	
	<link name="dummy"/>
	
	<joint name="base_link_joint" type="fixed">
		<parent link="base_link"/>
		<child link="dummy"/>
		<origin xyz="0 0 0.300" rpy="0 0 0" />
	</joint>
	
	<xacro:include filename="scara.urdf.xacro" />
	
	<create />
	
	<scara_arm  parent="dummy"/>
	
	<joint name="base_joint" type="prismatic">
		<parent link="tool0"/>
		<child link="end_effector"/>
		<origin xyz="0 0 -0.300" rpy="0 0 0" />
		<axis xyz="0 0 1" />
		<limit effort="1000.0" lower="0" upper="0.300" velocity="0.5"/>
	</joint>
</robot>
