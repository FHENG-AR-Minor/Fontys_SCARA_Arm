<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find scara_setup_control)/config/scara_setup.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/scara_setup" args="Linear_position_controller Shoulder_position_controller Elbow_position_controller Wrist_position_controller FingerJoint_position_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/scara_setup/joint_states" />
  </node>

</launch>
